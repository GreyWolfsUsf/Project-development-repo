# app/views/rides/new.html.erb
<%= form_with(model: @ride, local: true) do |form| %>
    <%= form.label :pickup_location %>
    <%= form.select :pickup_location, Location.usf_buildings %>
  
    <%= form.label :dropoff_location %>
    <%= form.select :dropoff_location, Location.usf_buildings %>
  
    <%= form.submit "Request Ride" %>
  <% end %>
  
